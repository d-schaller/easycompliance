generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// Authentication Models (NextAuth.js)
// ============================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// Core Application Models
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  passwordHash  String?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  organizations UserOrganization[]
  accounts      Account[]
  sessions      Session[]
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users    UserOrganization[]
  projects Project[]
}

model UserOrganization {
  id             String   @id @default(cuid())
  userId         String
  organizationId String
  role           OrgRole  @default(MEMBER)
  createdAt      DateTime @default(now())

  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
  @@index([userId])
  @@index([organizationId])
}

enum OrgRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

// ============================================
// Security Standards Models
// ============================================

model Standard {
  id          String   @id @default(cuid())
  name        String
  shortName   String
  version     String
  description String?  @db.Text
  isGlobal    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  controls Control[]

  @@unique([shortName, version])
}

model Control {
  id          String  @id @default(cuid())
  standardId  String
  code        String
  name        String
  description String  @db.Text
  category    String?
  subcategory String?

  standard        Standard         @relation(fields: [standardId], references: [id], onDelete: Cascade)
  implementations ProjectControl[]

  @@unique([standardId, code])
  @@index([standardId])
  @@index([category])
}

// ============================================
// Projects & Implementation Models
// ============================================

model Project {
  id             String        @id @default(cuid())
  organizationId String
  name           String
  description    String?       @db.Text
  status         ProjectStatus @default(ACTIVE)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  organization            Organization            @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  controls                ProjectControl[]
  dpia                    DPIA?
  organizationalMeasures  OrganizationalMeasure[]
  audits                  Audit[]

  @@index([organizationId])
  @@index([status])
}

model OrganizationalMeasure {
  id                String               @id @default(cuid())
  projectId         String
  name              String
  description       String?              @db.Text
  category          String?              // e.g., "Policy", "Training", "Process", "Access Control"
  status            ImplementationStatus @default(NOT_STARTED)
  responsiblePerson String?
  dueDate           DateTime?
  completedAt       DateTime?
  evidence          String?              @db.Text
  createdAt         DateTime             @default(now())
  updatedAt         DateTime             @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([status])
}

model DPIA {
  id        String     @id @default(cuid())
  projectId String     @unique
  status    DPIAStatus @default(DRAFT)

  // Stage 1: Preliminary Assessment
  processingDescription  String? @db.Text
  dataCategories         String? @db.Text // JSON array
  sensitiveDataTypes     String? @db.Text // JSON array
  dataSubjects           String? @db.Text
  estimatedDataSubjects  String?
  processingPurpose      String? @db.Text
  legalBasis             String? @db.Text
  technologyDescription  String? @db.Text
  preliminaryRiskLevel   RiskLevel?

  // Stage 2: Full Assessment
  identifiedRisks           String? @db.Text // JSON array
  dataProtectionByDesign    String? @db.Text
  residualRiskLevel         RiskLevel?
  residualRiskJustification String? @db.Text

  // Consultation
  requiresFDPICConsultation Boolean   @default(false)
  dpoConsulted              Boolean   @default(false)
  dpoName                   String?
  dpoOpinion                String?   @db.Text
  fdpicSubmissionDate       DateTime?

  // Metadata
  assessorName String?
  assessorRole String?
  approvedBy   String?
  approvalDate DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

enum ProjectStatus {
  ACTIVE
  ARCHIVED
  COMPLETED
}

model ProjectControl {
  id                        String               @id @default(cuid())
  projectId                 String
  controlId                 String
  implementationStatus      ImplementationStatus @default(NOT_STARTED)
  implementationDescription String?              @db.Text
  referenceUrl              String?
  implementationNotes       String?              @db.Text
  evidence                  String?              @db.Text
  responsiblePerson         String?
  dueDate                   DateTime?
  completedAt               DateTime?
  createdAt                 DateTime             @default(now())
  updatedAt                 DateTime             @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  control Control @relation(fields: [controlId], references: [id], onDelete: Cascade)

  @@unique([projectId, controlId])
  @@index([projectId])
  @@index([controlId])
  @@index([implementationStatus])
}

enum ImplementationStatus {
  NOT_STARTED
  IN_PROGRESS
  IMPLEMENTED
  NOT_APPLICABLE
  PARTIALLY_IMPLEMENTED
}

enum DPIAStatus {
  DRAFT
  IN_REVIEW
  APPROVED
  REQUIRES_CONSULTATION
}

enum RiskLevel {
  LOW
  MEDIUM
  HIGH
}

// ============================================
// Audit Models
// ============================================

enum AuditStatus {
  IN_PROGRESS
  COMPLETED
}

enum VerificationStatus {
  NOT_VERIFIED
  VERIFIED
  NEEDS_ATTENTION
}

model Audit {
  id          String      @id @default(cuid())
  projectId   String
  status      AuditStatus @default(IN_PROGRESS)

  // Audit metadata
  startedBy   String      // Auditor name
  startedAt   DateTime    @default(now())
  completedBy String?     // Who finished the audit
  completedAt DateTime?   // When audit was completed
  notes       String?     @db.Text  // Overall audit notes

  // Related records
  controlAudits ControlAudit[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([status])
}

model ControlAudit {
  id                 String             @id @default(cuid())
  auditId            String
  projectControlId   String

  verificationStatus VerificationStatus @default(NOT_VERIFIED)
  notes              String?            @db.Text
  verifiedAt         DateTime?
  verifiedBy         String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  audit Audit @relation(fields: [auditId], references: [id], onDelete: Cascade)

  @@unique([auditId, projectControlId])
  @@index([auditId])
}
